! ~/.Xresources
!
! Author: Russell Parker

!--------------------
! color-scheme: flowers
! source      : http://www.xcolors.net/dl/flowers
!--------------------
*.foreground:   #e0ede6
*.background:   #170e21
*.cursorColor:  #e0ede6

*.color0:       #170e21
*.color8:       #242120
*.color1:       #9c5c5a
*.color9:       #ceaead
*.color2:       #95ab56
*.color10:      #b2baaa
*.color3:       #c1d155
*.color11:      #c1d155
*.color4:       #483f5c
*.color12:      #9d92aa
*.color5:       #924e65
*.color13:      #c9a7b2
*.color6:       #aeaaa9
*.color14:      #c7cdc1
*.color7:       #e0ede6
*.color15:      #e6f2e6


!--------------------
! general
!--------------------
xterm.vt100.saveLines: 4096
xterm.termName: xterm-256color
xterm.vt100.scrollBar: false
xterm.vt100.geometry: 80x24
xterm.vt100.scrollTtyOutput: false
xterm.vt100.loginShell: false
xterm.vt100.utf8: 1
xterm.vt100.metaSendsEscape: true


!--------------------
! key bindings
!--------------------
xterm.vt100.translations: #override \
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d) \n\
    Ctrl <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY)


!--------------------
! font
!--------------------
xterm.vt100.faceName: Cousine:antialias=false
xterm.vt100.faceSize: 10
xterm.vt100.renderFont: true

! VT Font Menu: Unreadable
xterm.vt100.faceSize1: 7
! VT font menu: Tiny
xterm.vt100.faceSize2: 8
! VT font menu: Medium
xterm.vt100.faceSize3: 12
! VT font menu: Large
xterm.vt100.faceSize4: 14
! VT font menu: Huge
xterm.vt100.faceSize5: 16


!--------------------
! bell
!--------------------
xterm.vt100.visualBell: true
xterm.vt100.bellIsUrgent: false


!--------------------
! selecting
!--------------------
xterm.vt100.trimSelection: true
xterm.vt100.highlightSelection: true


!--------------------
! cursor
!--------------------
xterm.vt100.cursorBlink: true
xterm.vt100.cursorOnTime: 1000
xterm.vt100.cursorOffTime: 500
